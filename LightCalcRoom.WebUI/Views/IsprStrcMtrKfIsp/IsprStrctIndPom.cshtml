
@{
    ViewBag.Title = "Исправление значений индекса помещений";
}

<!--h2>IsprStrctIndPom</!--h2>-->
<div>
    <a class="myLnk" href="/">Раcчёт</a>
    <a class="myLnk" href="/SvtlncEdtr">Добавление и редактирование светильников</a>
    <a  class="myLnk"href="/TabKofIsp">Создание Таблицы коэффициентов использования</a>
    <a  class="myLnk"href="/IsprStrcMtrKfIsp/IsprStrctKfOtrz/@ViewBag.TblKfId">Исправить коэффициенты отражения</a>
</div>
@*ViewBag.NameTbl*@
<h3>Исправление значений индекса помещений для таблицы  -- @ViewBag.NameTbl</h3>
<input id="TblKfId" name="TblKfId" type="hidden" value="@ViewBag.TblKfId" />
<input id="NmrRow" name="NmrRow" type="hidden" value="0" />
<div>
    <input id="TblKfId" name="TblKfId" type="hidden" value="@ViewBag.TblKfId" />
</div>
<div id="tableBlock"></div>
<div id="editBlock">
    <p><b>Редактирование </b></p>
    <table>
        <tr><td><input type="hidden" id="editId" /><input type="hidden" id="editTblKfId" /></td><td></td></tr>
        <tr><td><label>Индекс помещения: </label></td><td><input type="text" id="editIndPm" required="required" pattern="^[0-9]{1,1}([,|\.][0-9]{1,3})?$" title="цифры или точка или запятая" /></td></tr>
    </table>
    <button id="editIndPom">Сохранить</button>
</div>
<div id="createBlock">
    <p><b>Добавление </b></p>
    <table>
        <tr><td><input type="hidden" id="addId" /><input type="hidden" id="addTblKfId" /></td><td></td></tr>
        <tr><td><label>Индекс помещения: </label></td><td><input type="text" id="addIndPm" required="required" pattern="^[0-9]{1,1}([,|\.][0-9]{1,3})?$" title="цифры или точка или запятая" /></td></tr>
    </table>
    <button id="addIndPom">Добавить</button>
</div>
@section Scripts
    {
        <script src="~/MyScripts/IsprStrcMtrKfIsp/IsprStrctIndPom.js" type="text/javascript">
        </script>
    }





